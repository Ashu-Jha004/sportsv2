// schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --- Enums ---

enum Gender {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

enum Sport {
  FOOTBALL
  BASKETBALL
  CRICKET
  TENNIS
  RUNNING
  SWIMMING
  OTHER
}

// --- Models ---

model Athlete {
  id        String   @id @default(cuid())
  // Clerk user id for 1-1 mapping
  clerkUserId String  @unique

  // Step 1: profile
  username    String   @unique
  email       String   @unique
  firstName   String
  lastName    String
  profileImage String? // URL to avatar
  dateOfBirth DateTime
  gender      Gender
  bio         String?  @db.Text

  // Step 2: sports
  primarySport   Sport
  secondarySport Sport?

  // Step 3: location
  country   String
  state     String
  city      String
  latitude  Float
  longitude Float

  // Onboarding & timestamps
  onboardingComplete Boolean   @default(false)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  @@index([clerkUserId])
  @@index([country, state, city])
  @@index([latitude, longitude])
}
